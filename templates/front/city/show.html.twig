{% extends 'base.html.twig' %}

{% block title %}New O'rizon Page de ville{% endblock %}

{% block body %}
<div class="my-container">
    <div class="city-image" style="background-image:url('{{ asset('images/city2.jpg') }}')">
        <span class="city-info">
            <h2 class="city-name">
                {{ city.name }}</h2>
            <h2 class="country-name">
                {{ city.country.name}}</h2>
            {# {% include "/partials/_favorites.html.twig" %} #}
        </span>

        {# stars rating #}
        {# <div class="stars-rating">
            <div class="stars-container"> #}

            {# <div>
                {% set ratingStars = city.rating|round(0, 'floor') %}
                {% include 'partials/_stars.html.twig' with { ratingStars: ratingStars } %}
            </div> #}

            {# </div>
        </div> #}
    </div>

    <div class="grid-container">

        <div class="section-1">
            <div class="title">
                <h5 class="critere-title">Critères</h5>
            </div>

            <div class="content">
                
                <div class="item">
                    <div>
                        <i class="fa-solid fa-bolt fa-xl" style="color: #000000;"></i>
                    </div>
                    <div>
                        <p class="critere-label">
                            Electricité
                        </p>
                        <p class="critere-value">
                            {{ city.electricity }}
                        </p>
                    </div>
                </div>    
    
                <div class="item">     
                    <div class="right-col">
                        <div>
                            <i class="fa-solid fa-wifi fa-xl" style="color: #000000;"></i>
                        </div>
                        <div>
                            <p class="critere-label">
                                Internet
                            </p>
                            <p class="critere-value">
                                {{ city.internet }}
                            </p>
                        </div>
                    </div>
                </div>
        
                <div class="item">
                    <div class="">
                        <i class="fa-regular fa-sun fa-xl" style="color: #000000;"></i>
                    </div>
                    <div>
                        <p class="critere-label">
                            Taux d'ensoleillement
                        </p>
                        <p class="critere-value">
                            {{ city.sunshineRate }}
                        </p>
                    </div>
                </div>
        
                <div class="item">        
                    <div class="right-col">
                        <div>
                            <i class="fa-solid fa-temperature-half fa-xl" style="color: #000000;"></i>
                        </div>
                        <div>
                            <p class="critere-label">
                                Température moyenne
                            </p>
                            <p class="critere-value">
                                {{ city.temperatureAverage }} °C
                            </p>
                        </div>
                    </div>
                </div>
            
                <div class="item">
                    <div>
                        <i class="fa-solid fa-sack-dollar fa-xl" style="color: #000000;"></i>
                    </div>
                    <div>
                        <p class="critere-label">
                            Coût de la vie
                        </p>
                        <p class="critere-value">
                            {{ city.cost }} Euros
                        </p>
                    </div>
                </div>
        
                <div class="item">        
                    <div class="right-col">
                        <div>
                            <i class="fa-solid fa-people-group fa-xl" style="color: #000000;"></i>
                        </div>
                        <div>
                            <p class="critere-label">
                                Démographie
                            </p>
                            <p class="critere-value">
                                {{ city.demography }} habitants
                            </p>
                        </div>
                    </div>
                </div>
        
                {# small device : revealed with button criteria below #}
                <div class="c16">
                    <div>
                        <i class="fa-solid fa-house fa-xl" style="color: #000000;"></i>
                    </div>
                    <div>
                        <p class="c17">
                            Habitation
                        </p>
                        <p class="critere-value">
                            {{ city.housing }}
                        </p>
                    </div>
                </div>
    
                {# small device : revealed with button criteria below #}
                <div class="c16">        
                    <div class="right-col">
                        <div>
                            <i class="fa-regular fa-clock fa-xl" style="color: #000000;"></i>
                        </div>
                        <div>
                            <p class="c17">
                                Timezone
                            </p>
                            <p class="critere-value">
                                {{ city.timezone }}
                            </p>
                        </div>
                    </div>
                </div>

                {# small device : revealed with button criteria below #}
                <div class="c16">
                    <div>
                        <i class="fa-solid fa-language fa-xl" style="color: #000000;"></i>
                    </div>
                    <div>
                        <p class="c17">
                            Langue
                        </p>
                        <p class="critere-value">
                            {{ city.language }}
                        </p>
                    </div>
                </div>

                {# small device : revealed with button criteria below #}
                <div class="c16">        
                    <div class="flex items-center space-x-4">
                        <div>
                            <i class="fa-solid fa-passport fa-xl" style="color: #000000;"></i>
                        </div>
                        <div>
                            <p class="c17">
                                Visa
                            </p>
                            <p class="critere-value">
                                {{ city.country.visa }}
                            </p>
                        </div>
                    </div>
                </div>

                {# small device : revealed with button criteria below #}
                <div class="c16">
                    <div>
                        <i class="fa-solid fa-person-military-pointing fa-xl" style="color: #000000;"></i>
                    </div>
                    <div>
                        <p class="c17">
                            Visa requis
                        </p>
                        <p class="critere-value">
                            {{ city.country.visaIsRequired }}
                        </p>
                    </div>
                </div>

                {# small device : revealed with button criteria below #}
                <div class="c16">        
                    <div class="right-col">
                        <div>
                            <i class="fa-brands fa-bitcoin fa-xl" style="color: #000000;"></i>
                        </div>
                        <div>
                            <p class="c17">
                                Monnaie
                            </p>
                            <p class="critere-value">
                                {{ city.country.currency }}
                            </p>
                        </div>
                    </div>
                </div>

                {# revealed with button criteria below #}
                <div class="criteria-expanded hidden flex items-center w-1/2 py-3 space-x-4">        
                    <div class="right-col">
                        <div>
                            <i class="fa-regular fa-image fa-xl" style="color: #000000;"></i>
                        </div>
                        <div>
                            <p class="c17">
                                Environnement
                            </p>
                            <p class="critere-value">
                                {{ city.environment }}
                            </p>
                        </div>
                    </div>
                </div>

                {# revealed with button criteria below #}
                <div class="criteria-expanded hidden flex items-center w-1/2 py-3 space-x-4">        
                    <div class="right-col">
                        <div>
                            <i class="fa-solid fa-ruler fa-xl" style="color: #000000;"></i>
                        </div>
                        <div>
                            <p class="c17">
                                Superficie
                            </p>
                            <p class="critere-value">
                                {{ city.area }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div id="criteria">
                <button id="toggle-criteria" type="button">Plus de critères</button>
            </div>

        </div>

        {# container #}
        <div class="section-2">

            {# google maps integration #}
            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d83998.77824581142!2d2.2646349778821486!3d48.85893843456867!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e1f06e2b70f%3A0x40b82c3688c9460!2sParis!5e0!3m2!1sfr!2sfr!4v1688736729435!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>

            {# api weather integration #}
            <div class="weather">
                {# text hidden mobile version #}
                <h2 class="weather-title">Météo actuelle :</h2>
                <ion-icon name="rainy-outline" size="large"></ion-icon>
                {# text hidden mobile version #}
                <h2 class="weather-temperature">Température :</h2>
                <h2 class="weather-value">
                    {{ city.temperatureAverage }} °C
                </h2>
            </div>

        </div>

    </div>
    
</div>  

